<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="36dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimg11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="97dp"
            android:text=" Bimal John"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uploadtime1"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="168dp"
            android:text=" 21 Hours"
            android:textColor=" #787878" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="402dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="7dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/userdis1"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="ഇന്ത്യയിൽ സാക്ഷരത കൂടിയ ജില്ല സെർച്ചിപ്പ്. ..........................................."
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/post11"
            android:layout_width="fill_parent"
            android:layout_height="264dp"
            android:layout_marginTop="60dp"

            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/husdes" />

        <com.brouding.doubletaplikeview.DoubleTapLikeView
            android:id="@+id/layout_double_tap_like1"
            android:layout_width="143dp"
            android:layout_height="85dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="160dp"
            app:adjustViewBounds="true"
            app:disableAnimation="false"
            app:doubleTapIn="200"
            app:icon="@drawable/ic_heart"
            app:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="350dp"
            android:backgroundTint="#FCFDFD"
            android:src="@drawable/message" />

        <ImageButton
            android:id="@+id/download1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="350dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/down" />

        <ImageButton
            android:id="@+id/share1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="350dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/sharea" />

        <ImageButton
            android:id="@+id/bookmark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="345dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/bookmarked" />

        <TextView
            android:id="@+id/yu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="10dp"
            android:text="1 Likes" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>




















