<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:contentDescription="For more ui/ux visit www.materialuiux.com"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <ScrollView


        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="For more ui/ux visit www.materialuiux.com"
                tools:ignore="MissingConstraints">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:contentDescription="For more ui/ux visit www.materialuiux.com"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="For more ui/ux visit www.materialuiux.com"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:id="@+id/id_Profile_RelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="41dp">


                            <RelativeLayout
                                android:id="@+id/id_ProfileImage_RelativeLayout"
                                android:layout_width="149dp"
                                android:layout_height="117dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true">

                                <!--  Profile Image -->

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/photos"
                                    android:layout_width="146dp"
                                    android:layout_height="117dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/psc" />

                                <!--  Change Image -->

                                <!--                        <ImageView-->
                                <!--                            android:layout_width="40dp"-->
                                <!--                            android:layout_height="40dp"-->
                                <!--                            android:layout_alignParentEnd="true"-->
                                <!--                            android:layout_alignParentRight="true"-->
                                <!--                            android:layout_centerVertical="true"-->
                                <!--                            android:layout_marginEnd="10dp"-->
                                <!--                            android:contentDescription="For more ui/ux visit www.materialuiux.com"-->
                                <!--                            android:layout_marginRight="10dp"-->
                                <!--                            android:background="@drawable/ic_library_add_black_24dp" />-->

                            </RelativeLayout>

                            <!-- User Name  -->

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/id_ProfileImage_RelativeLayout"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="18dp"
                                android:text="Mohammed Alsudani"
                                android:textColor="@color/color_primary_text"
                                android:textSize="20sp" />

                            <!--   tittle   -->
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"

                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="Android Developer"
                            android:textAlignment="center"
                            android:textColor="@color/color_third_text"
                            android:textSize="16sp" />

                    </LinearLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>


                >

            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:layout_width="170dp"
                android:layout_height="31dp"
                android:fontFamily="@font/roboto_bold"
                android:text="FOLLOW US"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.608">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/facebook"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/facebook" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/google"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/twitter" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/instagaram"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/instagram" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.542"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.776">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photos12"
                    android:layout_width="67dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/psc" />

                <EditText
                    android:id="@+id/write"
                    android:layout_width="277dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/spin"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=" Write Somthing"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/log_out"
                    android:layout_width="34dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/logout" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>