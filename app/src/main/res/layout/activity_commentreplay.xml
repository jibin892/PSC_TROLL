<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cimg"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="88dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="John Doe"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/msgin"
                    android:lineSpacingExtra="5dp"
                    android:maxWidth="240dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    android:text="hi man, how are you?"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                    app:layout_constraintTop_toBottomOf="@+id/message_user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ctime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="11:40"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/message_text"
                        app:layout_constraintLeft_toRightOf="@+id/message_text" />

                    <TextView
                        android:id="@+id/message_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Like"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/message_text"
                        app:layout_constraintLeft_toRightOf="@+id/message_text" />

                    <TextView
                        android:id="@+id/message_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Reply"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/message_text"
                        app:layout_constraintLeft_toRightOf="@+id/message_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <ImageView
            android:id="@+id/postimg123t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.824" />
        />


        <ListView
            android:id="@+id/list_of_messages3"
            android:layout_width="match_parent"
            android:layout_height="567dp"
            android:layout_above="@id/fab"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            android:padding="10dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/fab2">

                <EditText
                    android:id="@+id/input3"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:background="@drawable/roundcorner"
                    android:hint="Enter your comment"
                    android:windowSoftInputMode="adjustPan"
                    android:isScrollContainer="true"
                    android:padding="12dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="79dp"

                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/cam3"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:clickable="true"
                    android:src="@drawable/photo"
                    android:tint="@android:color/white"
                    app:fabSize="mini"

                    />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab3"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:clickable="true"
                    android:src="@drawable/send"
                    android:tint="@android:color/white"
                    app:fabSize="mini" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>