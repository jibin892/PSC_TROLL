<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:ignore="NamespaceTypo"
    android:gravity="center"
    android:paddingBottom="@dimen/_27sdp"
    android:paddingLeft="@dimen/_43sdp"
    android:paddingRight="@dimen/_43sdp"
    android:paddingTop="@dimen/_50sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photos123"
            android:layout_width="40dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/write123"
            android:layout_width="269dp"
            android:layout_height="47dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spin"
            android:focusable="false"
            android:fontFamily="@font/roboto_bold"
            android:hint=" Write Somthing"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        shimmer:duration="800">

        <!-- Adding 3 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/recipe_placeholder_item" />

            <include layout="@layout/recipe_placeholder_item" />

            <include layout="@layout/recipe_placeholder_item" />

            <include layout="@layout/recipe_placeholder_item" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ListView
        android:id="@+id/list_of_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fab"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:padding="10dp"
        android:transcriptMode="alwaysScroll"
        >

    </ListView>





</LinearLayout>
