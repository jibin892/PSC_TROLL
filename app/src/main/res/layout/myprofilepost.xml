<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relLayout1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/userimg12"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="mitch.tabian"
                    android:layout_toRightOf="@+id/userimg12"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/username12"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/memos"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/chosee12"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/post12"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_below="@id/relLayout1"
               />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relLayout2"
                android:layout_below="@+id/post12"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/heartLayout"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/image_heart12"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/vector_heart_white"
                        android:visibility="visible" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/comment12"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/heartLayout"
                    android:src="@drawable/comment"
                    android:visibility="visible" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:id="@+id/bookmark12"
                    android:layout_toRightOf="@+id/heartLayout"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/favi"
                    android:visibility="visible"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/yu12"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_toRightOf="@+id/heartLayout"
                    android:text="1 Likes" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relLayout3"
                android:layout_below="@+id/relLayout2"
                android:padding="20dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by Mitch, Tom, Mohammed and 30 others"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/userdis12"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all 3 comments"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:layout_below="@+id/userdis12"
                    android:id="@+id/image_comments_link12"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 DAYS AGO"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:layout_below="@+id/image_comments_link12"
                    android:id="@+id/uploadtime12"
                    android:layout_marginTop="15dp"/>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

