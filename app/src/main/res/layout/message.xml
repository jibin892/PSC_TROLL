<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/image_message_profilet"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:layout_toRightOf="@+id/image_message_profilet"
            android:layout_marginTop="15dp"
            android:background="@drawable/whiteroundcorner">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mitch.tabian"
                            android:id="@+id/message_usert"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/postimg123t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.824" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="this is a comment"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_toRightOf="@+id/message_usert"
                            android:id="@+id/message_textt"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 d"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:id="@+id/message_timet"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@+id/comment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 likes"
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:id="@+id/message_like"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@+id/comment"
                            android:layout_toRightOf="@+id/message_timet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:id="@+id/message_reply"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@+id/comment"
                            android:layout_toRightOf="@+id/message_like"/>


                </RelativeLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/commentlikett"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_heart_white"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>

</RelativeLayout>