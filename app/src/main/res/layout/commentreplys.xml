<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_message_profilet1"
                    android:layout_width="46dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <TextView
                    android:id="@+id/message_usert1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:text="John Doe"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/message_textt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/msgin"
                    android:lineSpacingExtra="5dp"
                    android:maxWidth="240dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    android:text="hi man, how are you?"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                    app:layout_constraintTop_toBottomOf="@+id/message_user" />
                <ImageView
                    android:id="@+id/postimg123t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.824" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/message_timet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="11:40"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="@+id/message_text"
                            app:layout_constraintLeft_toRightOf="@+id/message_text" />
                        <TextView
                            android:id="@+id/message_like1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="20dp"
                            android:text="Like"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="@+id/message_text"
                            app:layout_constraintLeft_toRightOf="@+id/message_text" />
                        <TextView
                            android:id="@+id/commentlike"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="80dp"
                            android:background="@drawable/vector_heart_red"/>


                </LinearLayout>






        </LinearLayout>

</RelativeLayout>